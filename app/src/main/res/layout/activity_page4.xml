<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".page4">

    <!-- App Name -->
    <TextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="ðŸ¾ Catcare+"
        android:textColor="#5C2D91"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Cat Icon in Light Grey Circle -->
    <ImageView
        android:id="@+id/caticon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/oval"
        android:padding="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/cat_logo" />

    <!-- No Profile Text -->
    <TextView
        android:id="@+id/no_profilestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Cat Profiles Yet!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="32dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add a cat profile to get started!"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Create Profile Button -->
    <Button
        android:id="@+id/create_profilebutton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="+ Create Cat Profile"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:background="@drawable/button_bg" />

    <!-- Container for dynamic cat profile views -->
    <LinearLayout
        android:id="@+id/dynamic_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:visibility="gone" /> <!-- hidden by default -->

</LinearLayout>
