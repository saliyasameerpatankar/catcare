<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page3"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cat_logo"
            android:layout_marginTop="60dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catcare+"
            android:textSize="20sp"
            android:textColor="#007BFF"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Forgot Password Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email address to reset your password"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- Input Box -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your email address"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edittext_bg" />
        </LinearLayout>


        <!-- Reset Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Send Reset Link"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7B4DFF"
            android:background="@drawable/button_bg"
            android:layout_marginTop="24dp" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/backtologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¹ Back to Login"
            android:textSize="14sp"
            android:textColor="#007BFF"
            android:layout_marginTop="16dp" />

        <!-- Info Message Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F0F4FF"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info_blue"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="We'll send you an email with a link to reset your password"
                android:textColor="#007BFF"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
