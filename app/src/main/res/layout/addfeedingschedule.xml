<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@android:color/white">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:id="@+id/topBarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Feeding Schedule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Feeding Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeding Time"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/feedingTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:drawableStart="@drawable/time"
                android:focusable="false"
                android:hint="  08:00 AM"
                android:padding="12dp" />

            <!-- Food Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Type"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="20dp" />

            <Spinner
                android:id="@+id/foodTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg" />

            <!-- Portion Size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portion Size"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/portionSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter portion size (e.g., 1/3 cup)"
                android:background="@drawable/edittext_bg"
                android:padding="12dp" />

            <!-- Special Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Instructions (Optional)"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/specialInstructions"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="Add any special feeding instructions..."
                android:background="@drawable/edittext_bg"
                android:padding="12dp" />

            <!-- Feeding Reminders -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeding Reminders"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="20dp" />

            <Switch
                android:id="@+id/feedingReminderSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveScheduleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Schedule"
                android:background="@drawable/button_bg"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/deleteScheduleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Schedule"
                android:background="@drawable/edittext_bg"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
