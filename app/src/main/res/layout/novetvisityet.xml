<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".page4">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="#FFFFFF">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vet Visits"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Add Button -->
            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:contentDescription="Add"
                android:src="@drawable/add" />
        </LinearLayout>

        <!-- Cat Icon with Circular Background -->
        <ImageView
            android:id="@+id/caticon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/circle_bg"
            android:padding="32dp"
            android:src="@drawable/cat_logo"
            android:scaleType="centerInside"
            android:contentDescription="Cat Icon" />

        <!-- No Vet Visits Text -->
        <TextView
            android:id="@+id/no_profilestext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Vet Visits Yet!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="32dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your first vet visit to get started!"
            android:textColor="#777777"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Add Vet Visit Button -->

        <!-- Dynamic Content Container (Hidden Initially) -->

        <Button
            android:id="@+id/create_profilebutton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_bg"
            android:text="Add Vet Visit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/dynamic_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
